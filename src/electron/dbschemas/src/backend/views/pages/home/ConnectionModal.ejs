<%
    const FORM_INPUT = 'form-input';
    const FORM_CONTROL = 'form-control form-control-sm';
    const FORM_SELECT = 'form-select form-select-sm';

    class ConnectionElements
    {
        formClass = `connection-form`;
        containerClass = `${this.formClass}-modal`;
        inputNameId = `${this.formClass}-input-name`;
        inputTypeId = `${this.formClass}-input-type`;
        inputDatabaseNameId = `${this.formClass}-input-database-name`;
        inputHostId = `${this.formClass}-input-host`;
        inputFileId = `${this.formClass}-input-file`;
        inputUsernameId = `${this.formClass}-input-username`;
        inputPasswordId = `${this.formClass}-input-password`;
        spinner = `${this.formClass}-spinner`;
        btnSelectFileClass = `${this.formClass}-btn-select-file`;
    }

    const ELE = new ConnectionElements();

%>

<div class="modal <%= ELE.containerClass %>" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Connection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <div class="my-5 <%= ELE.spinner %>">
                    <%- include('../../includes/Spinner'); -%>
                </div>

                <form class="<%= ELE.formClass %>">
                    <fieldset>

                        <!-- Connection name -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputNameId %>">Name</label>
                            <input type="text" class="<%= FORM_CONTROL %>" id="<%= ELE.inputNameId %>" />
                        </div>

                        <!-- Connection type -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputTypeId %>">Type</label>
                            <select class="<%= FORM_SELECT %>" id="<%= ELE.inputTypeId %>">
                                <option value="1" selected>MySQL</option>
                                <option value="2">SQLite</option>
                                <option value="3">Access</option>
                                <option value="4">Postgres</option>
                            </select>
                        </div>

                        <!-- database name -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputDatabaseNameId %>">Database Name</label>
                            <input type="text" class="<%= FORM_CONTROL %>" id="<%= ELE.inputDatabaseNameId %>" />
                        </div>
                        
                        <!-- host -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputHostId %>">Host</label>
                            <input type="text" class="<%= FORM_CONTROL %>" id="<%= ELE.inputHostId %>" />
                        </div>
                        
                        <!-- file -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputFileId %>">File</label>
                            <div class="d-flex align-items-center">
                                <input type="text" class="<%= FORM_CONTROL %> me-1" id="<%= ELE.inputFileId %>" />
                                <button type="button" class="btn btn-light border-light-subtle text-nowrap <%= ELE.btnSelectFileClass %>" title="Select a file">
                                    <i class='bx bx-folder-open'></i>
                                </button>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputUsernameId %>">Username</label>
                            <input type="text" class="<%= FORM_CONTROL %>" id="<%= ELE.inputUsernameId %>" />
                        </div>
                        
                        <!-- password -->
                        <div class="<%= FORM_INPUT %>">
                            <label for="<%= ELE.inputPasswordId %>">Password</label>
                            <input type="password" class="<%= FORM_CONTROL %>" id="<%= ELE.inputPasswordId %>" />
                        </div>

                        <div class="d-flex">
                            <button type="submit" class="btn btn-sm btn-success btn-submit">Save</button>
                        </div>
                    </fieldset>
                </form>


            </div>
        </div>
    </div>
</div>