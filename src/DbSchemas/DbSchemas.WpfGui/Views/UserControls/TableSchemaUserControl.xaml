<UserControl x:Class="DbSchemas.WpfGui.Views.UserControls.TableSchemaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbSchemas.WpfGui.Views.UserControls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:TableSchemaUserControl, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Border>
        <ui:CardExpander Header="{Binding ViewModel.TableSchema.TableName}"
                         d:Header="Table name"
                         IsExpanded="{Binding ViewModel.IsExpanded, Mode=TwoWay}"
                         d:IsExpanded="True">

            
            <ui:DataGrid ItemsSource="{Binding ViewModel.TableSchema.Columns}"
                         d:ItemsSource="{d:SampleData ItemCount=5}"
                         IsReadOnly="True"
                         AutoGenerateColumns="False"
                         HorizontalScrollBarVisibility="Auto">

                <ui:DataGrid.Columns>
                    <DataGridTextColumn Header="Position" Binding="{Binding Position}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridCheckBoxColumn Header="Nullable" Binding="{Binding IsNullable}"/>
                    <DataGridTextColumn Header="Default Value" Binding="{Binding DefaultValue}"/>
                    <DataGridTextColumn Header="Extra" Binding="{Binding Extra}"/>
                </ui:DataGrid.Columns>

            </ui:DataGrid>
            
            
        </ui:CardExpander>
    </Border>
</UserControl>
